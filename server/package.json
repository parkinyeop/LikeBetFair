{
  "name": "likebetfair-server",
  "version": "1.0.0",
  "description": "Server for LikeBetFair application",
  "main": "app.js",
  "scripts": {
    "start": "NODE_OPTIONS='--max-old-space-size=2048' node app.js",
    "dev": "nodemon app.js",
    "migrate": "sequelize-cli db:migrate",
    "migrate:undo": "sequelize-cli db:migrate:undo",
    "migrate:undo:all": "sequelize-cli db:migrate:undo:all",
    "clean": "npm cache clean --force && npm prune --production"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "bcryptjs": "^2.4.3",
    "cheerio": "^1.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "knex": "^3.1.0",
    "node-cron": "^3.0.3",
    "node-schedule": "^2.1.1",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.1",
    "sqlite3": "^5.1.7",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.3",
    "sequelize-cli": "^6.6.3"
  },
  "type": "module"
}
