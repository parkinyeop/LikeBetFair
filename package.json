{
  "name": "like-bet-fair",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && node app.js",
    "client": "next dev",
    "build": "npm run build:fast",
    "build:optimized": "NEXT_TELEMETRY_DISABLED=1 NODE_OPTIONS='--max-old-space-size=2048' next build",
    "build:fast": "./scripts/optimize-build.sh",
    "build:production": "NODE_OPTIONS='--max-old-space-size=4096' npm run build:optimized",
    "start": "cd server && node app.js",
    "start:server": "cd server && node app.js",
    "migrate": "cd server && node runMigrations.js",
    "lint": "next lint",
    "postinstall": "cd server && npm install --only=production --ignore-scripts",
    "clean": "npm cache clean --force && npm prune --production",
    "optimize": "npm run clean && npm run build:fast",
    "check-env": "node scripts/check-environment.js",
    "check-env:api": "node scripts/check-environment.js --api",
    "check-env:db": "node scripts/check-environment.js --db",
    "check-env:full": "node scripts/check-environment.js --api --db",
    "render-postbuild": "echo '마이그레이션 생략'",
    "postbuild": "echo '마이그레이션 생략'",
    "render-build": "NEXT_TELEMETRY_DISABLED=1 npm run build:fast"
  },
  "dependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.11.19",
    "@types/react": "^18.2.57",
    "@types/react-dom": "^18.2.19",
    "autoprefixer": "^10.4.17",
    "axios": "^1.9.0",
    "bcryptjs": "^2.4.3",
    "cheerio": "^1.1.0",
    "concurrently": "^9.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "next": "^14.2.30",
    "node-cron": "^3.0.3",
    "node-schedule": "^2.1.1",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "postcss": "^8.4.35",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-resizable-panels": "^3.0.3",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "ws": "^8.18.3",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-next": "14.1.0"
  },
  "type": "module"
}
